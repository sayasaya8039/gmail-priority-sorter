{
  "manifest_version": 3,
  "name": "Gmail Priority Sorter - メール優先度自動分類",
  "version": "1.1.0",
  "description": "AIがGmailの受信トレイを分析し、重要メールを上位に並べ替え、緊急度スコアを自動付与します",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Gmail Priority Sorter"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-D3hAFlQU.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "resources": [
        "assets/storage-CS1t7rav.js",
        "assets/classifier-BcIm6e9n.js",
        "assets/index.tsx-CYLEoQu9.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
